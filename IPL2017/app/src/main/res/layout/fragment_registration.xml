<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bridgeit.ipl2017.view.Registration">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="@dimen/dimen_20dp"
        app:cardBackgroundColor="@color/logincardback"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/editview_registration_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/black"
                android:ems="10"
                android:hint="E-Mail"
                android:layout_marginBottom="@dimen/dimen_10dp"
              android:layout_above="@+id/edittext_registration_pass1"
                />

            <EditText
                android:id="@+id/edittext_registration_pass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:ems="10"
                android:hint="Password "
                android:layout_marginBottom="@dimen/dimen_10dp"
              android:layout_above="@+id/edittext_registration_pass2"
                 />

            <EditText
                android:id="@+id/edittext_registration_pass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:ems="10"
                android:hint="Password"
                android:layout_marginBottom="@dimen/dimen_10dp"
               android:layout_above="@+id/button_register"

               />

            <Button
                android:id="@+id/button_register"
                android:text="Resister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="@dimen/dimen_20dp"
                 />

            <Button
                android:id="@+id/button_registration_cancel"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dimen_20dp"
                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/register"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView2" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
