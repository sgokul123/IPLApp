<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bridgeit.ipl2017.view.LoginFragment"
    android:background="@drawable/img234"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="@dimen/dimen_20dp"
        app:cardBackgroundColor="@color/logincardback"

        >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/loginn"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"

                    android:id="@+id/imageView" />
        <EditText
            android:id="@+id/edittext_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editview_login_Pass"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:ems="10"
            android:hint="@string/Email"
            android:inputType="textPersonName"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:text="gokulsonawane9@gmail.com"
            />



        <EditText
            android:id="@+id/editview_login_Pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_Login"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:ems="10"
            android:text="gokuls"
            android:hint="@string/Password"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:imeOptions="actionGo"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
        <Button
            android:id="@+id/button_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dimen_30dp"
            android:text="Login"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/button_login_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Registration"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dimen_30dp"

            />
</LinearLayout>


            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>

</RelativeLayout>
