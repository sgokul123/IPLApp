<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bridgeit.ipl2017.view.LoginFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="@dimen/dimen_20dp"
        app:cardBackgroundColor="@color/logincardback"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            >
        <EditText
            android:id="@+id/edittext_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editview_login_Pass"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:ems="10"
            android:hint="@string/Email"
            android:inputType="textPersonName"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/editview_login_Pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_Login"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:ems="10"
            android:hint="@string/Password"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/button_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dimen_30dp"
            android:text="Login"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/button_login_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Registration"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dimen_30dp"

            />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/loginn"
                android:layout_centerHorizontal="true"

                android:id="@+id/imageView" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
